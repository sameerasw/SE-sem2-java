<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="478.0" prefWidth="533.0" spacing="20.0" style="-fx-background-color: #000000;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.ui003tut03.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="39.0" prefWidth="493.0">
         <children>
            <TextField fx:id="firstNumber" promptText="First number" style="-fx-background-color: #888888;">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="secondNumber" layoutX="10.0" layoutY="10.0" promptText="Second number" style="-fx-background-color: #888888;">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <Label fx:id="sumLabel" text="Sum:" textFill="WHITE" />
      <HBox alignment="CENTER" prefHeight="16.0" prefWidth="493.0">
         <children>
            <Button fx:id="clrButton" mnemonicParsing="false" onAction="#clrButtonClick" style="-fx-background-color: #444444;" text="Clear" textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="sumButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#sumButtonClick" style="-fx-background-color: #444444;" text="Sum" textFill="WHITE">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
