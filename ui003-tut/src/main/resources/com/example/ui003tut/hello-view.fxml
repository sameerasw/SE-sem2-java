<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="338.0" prefWidth="347.0" spacing="20.0" style="-fx-background-color: #000000;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.ui003tut.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your name" />
   <TextField fx:id="nameField" prefHeight="25.0" prefWidth="242.0" promptText="Enter your name" style="-fx-background-color: #888888; -fx-font-weight: bold;" />

    <Label fx:id="welcomeText" textFill="WHITE" />
   <HBox alignment="CENTER" prefHeight="34.0" prefWidth="307.0">
      <children>
         <Button fx:id="clearButton" mnemonicParsing="false" onAction="#onClearButtonClick" prefHeight="25.0" prefWidth="108.0" style="-fx-background-color: #444444;" text="Clear" textFill="WHITE">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
          <Button onAction="#onHelloButtonClick" prefHeight="25.0" prefWidth="110.0" style="-fx-background-color: #444444;" text="Click Me" textFill="WHITE">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="22.0" prefWidth="307.0">
      <children>
         <Button fx:id="scanLog" mnemonicParsing="false" onAction="#onScanLogClick" style="-fx-background-color: #444444;" text="Scan and log" textFill="WHITE">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
         <Button fx:id="scan" mnemonicParsing="false" onAction="#onScanClick" style="-fx-background-color: #444444;" text="Scan and print" textFill="WHITE">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
</VBox>
